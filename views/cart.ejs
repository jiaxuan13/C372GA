<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Your Cart</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

  <style>
    body {
      background-color: #fff6fb;
      font-family: 'Segoe UI', sans-serif;
    }

    /* Pink Navbar */
    .navbar {
      background: linear-gradient(90deg, #ff8db8, #ff6fa3);
    }
    .navbar-brand, .nav-link {
      color: white !important;
      font-weight: 500;
    }
    .nav-link.active {
      text-decoration: underline;
    }
    .nav-link:hover {
      background-color: #ff8db8;
      border-radius: 6px;
      color: #fff !important;
    }

    /* Table styling */
    table {
      background: white;
      border-radius: 12px;
      overflow: hidden;
      box-shadow: 0 3px 12px rgba(0,0,0,0.08);
    }
    th {
      background-color: #ff8db8;
      color: white;
      border: none !important;
    }
    td {
      vertical-align: middle;
    }

    /* Buttons */
    .btn-pink {
      background-color: #ff6fa3;
      border: none;
      color: white;
    }
    .btn-pink:hover {
      background-color: #ff8db8;
      color: white;
    }
    .btn-outline-pink {
      border: 1px solid #ff6fa3;
      color: #ff6fa3;
    }
    .btn-outline-pink:hover {
      background-color: #ff6fa3;
      color: white;
    }

    /* Page spacing */
    h2 {
      font-weight: 700;
      color: #333;
      margin-top: 40px;
    }

    .total-box {
      font-size: 1.3rem;
      font-weight: 600;
      color: #ff6fa3;
      background: white;
      display: inline-block;
      padding: 10px 20px;
      border-radius: 10px;
      box-shadow: 0 2px 8px rgba(0,0,0,0.08);
    }
  </style>
</head>

<body>

  <!-- Navbar -->
  <nav class="navbar navbar-expand-sm">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">üêæ FluffyFriend</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#collapsibleNavbar">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="collapsibleNavbar">
        <ul class="navbar-nav ms-auto">
          <li class="nav-item">
            <a class="nav-link" href="/products">Products</a>
          </li>
          <li class="nav-item">
            <a class="nav-link active" href="/cart">View Cart</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/logout">Logout</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Cart Content -->
  <div class="container">

    <h2>Shopping Cart</h2>

    <% if (!cartItems || cartItems.length === 0) { %>

      <p class="mt-3">Your cart is empty.</p>
      <a href="/" class="btn btn-pink mt-3 px-4">Back to Home</a>

    <% } else { %>

      <table class="table table-bordered mt-4">
        <thead>
          <tr>
            <th>Product</th>
            <th>Image</th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Line Total</th>
            <th>Action</th>
          </tr>
        </thead>

        <tbody>
          <% let total = 0; %>
          <% for (let i = 0; i < cartItems.length; i++) {
               const item = cartItems[i];
               const lineTotal = (Number(item.price) || 0) * (Number(item.quantity) || 0);
               total += lineTotal;
          %>
            <tr>
              <td><%= item.productName %></td>
              <td>
                <% if (item.image) { %>
                  <img src="/images/<%= item.image %>" width="80" class="img-thumbnail">
                <% } else { %>
                  <span class="text-muted">No image</span>
                <% } %>
              </td>
              <td>$<%= (Number(item.price) || 0).toFixed(2) %></td>
              <td><%= item.quantity %></td>
              <td>$<%= lineTotal.toFixed(2) %></td>
              <td>
                <form action="/cart/remove" method="POST" class="d-inline">
                  <input type="hidden" name="fineId" value="<%= item.product_id %>">
                  <button type="submit" class="btn btn-danger btn-sm">Remove</button>
                </form>
              </td>
            </tr>
          <% } %>
        </tbody>
      </table>

      <div class="total-box mt-3">
        Total: $<%= total.toFixed(2) %>
      </div>

      <div class="mt-4 d-flex gap-2">
        <a href="/" class="btn btn-outline-pink px-4">Back to Home</a>

        <form action="/cart/clear" method="POST">
          <button type="submit" class="btn btn-warning px-4">Clear Cart</button>
        </form>

        <form action="/checkout" method="POST" class="d-inline">
          <button type="submit" class="btn btn-pink px-4">Checkout</button>
        </form>
      </div>

    <% } %>
  </div>

  <%- include('partials/footer') %>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
