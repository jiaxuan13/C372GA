<div id="ffCarousel" class="carousel slide mb-5" data-bs-ride="carousel" style="border-radius:16px; overflow:hidden; box-shadow:0 6px 20px rgba(255, 111, 163, .25);">
  <!-- Dots -->
  <div class="carousel-indicators">
    <button type="button" data-bs-target="#ffCarousel" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
    <button type="button" data-bs-target="#ffCarousel" data-bs-slide-to="1" aria-label="Slide 2"></button>
    <button type="button" data-bs-target="#ffCarousel" data-bs-slide-to="2" aria-label="Slide 3"></button>
    <button type="button" data-bs-target="#ffCarousel" data-bs-slide-to="3" aria-label="Slide 4"></button>
  </div>

  <!-- Slides. -->
  <div class="carousel-inner">

    <!-- Slide 1: Food -->
    <div class="carousel-item active">
      <img src="/images/food.jpg" class="d-block w-100" alt="Nutritious Pet Food" style="height:420px; object-fit:cover;">
      <div class="carousel-caption d-none d-md-block">
        <h3 class="fw-bold" style="text-shadow:0 2px 8px rgba(0,0,0,.4)">Nutritious Food</h3>
        <p style="text-shadow:0 2px 8px rgba(0,0,0,.4)">Healthy meals for happy pets.</p>
        <a href="/products?category=food" class="btn btn-sm" style="background:#ff6fa3;color:#fff;border:none;">Shop Food</a>
      </div>
    </div>

    <!-- Slide 2: Toys -->
    <div class="carousel-item">
      <img src="/images/toys.jpg" class="d-block w-100" alt="Pet Toys" style="height:420px; object-fit:cover;">
      <div class="carousel-caption d-none d-md-block">
        <h3 class="fw-bold" style="text-shadow:0 2px 8px rgba(0,0,0,.4)">Toys & Enrichment</h3>
        <p style="text-shadow:0 2px 8px rgba(0,0,0,.4)">Playtime that keeps them sharp.</p>
        <a href="/products?category=toys" class="btn btn-sm" style="background:#ff6fa3;color:#fff;border:none;">Shop Toys</a>
      </div>
    </div>

    <!-- Slide 3: Grooming -->
    <div class="carousel-item">
      <img src="/images/grooming.jpg" class="d-block w-100" alt="Grooming Essentials" style="height:420px; object-fit:cover;">
      <div class="carousel-caption d-none d-md-block">
        <h3 class="fw-bold" style="text-shadow:0 2px 8px rgba(0,0,0,.4)">Grooming Essentials</h3>
        <p style="text-shadow:0 2px 8px rgba(0,0,0,.4)">Shiny coat, happy pet.</p>
        <a href="/products?category=grooming" class="btn btn-sm" style="background:#ff6fa3;color:#fff;border:none;">Shop Grooming</a>
      </div>
    </div>

    <!-- Slide 4: Healthcare -->
    <div class="carousel-item">
      <img src="/images/healthcare.jpg" class="d-block w-100" alt="Healthcare for Pets" style="height:420px; object-fit:cover;">
      <div class="carousel-caption d-none d-md-block">
        <h3 class="fw-bold" style="text-shadow:0 2px 8px rgba(0,0,0,.4)">Healthcare</h3>
        <p style="text-shadow:0 2px 8px rgba(0,0,0,.4)">Daily care you can trust.</p>
        <a href="/products?category=healthcare" class="btn btn-sm" style="background:#ff6fa3;color:#fff;border:none;">Shop Healthcare</a>
      </div>
    </div>
  </div>

  <!-- Controls -->
  <button class="carousel-control-prev" type="button" data-bs-target="#ffCarousel" data-bs-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true" style="filter: drop-shadow(0 0 6px rgba(0,0,0,.5));"></span>
    <span class="visually-hidden">Previous</span>
  </button>
  <button class="carousel-control-next" type="button" data-bs-target="#ffCarousel" data-bs-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true" style="filter: drop-shadow(0 0 6px rgba(0,0,0,.5));"></span>
    <span class="visually-hidden">Next</span>
  </button>
</div>
